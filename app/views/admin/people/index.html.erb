<h2>People List</h2>

<div class="list">
	<% @people.each do |person| %>
	<article>
		<%= render partial: "info", locals: { person: person } %>
		<div class="actions">
			<%= link_to 'Show', admin_person_path(person), class: "btn" %>
			<%= link_to 'Edit', edit_admin_person_path(person), class: "btn" %>
			<%= link_to 'Destroy', admin_person_path(person), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn" %>
		</div>
	</article>
	<% end %>
</div>

<br>

<%= link_to 'New Person', new_admin_person_path, class: "btn btn-primary" %>